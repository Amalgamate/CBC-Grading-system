# Elimcrown System Environment Variables Template
# Copy this to .env and fill in the values

# Server Configuration
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Database Configuration (Neon PostgreSQL RECOMMENDED)
DATABASE_URL="postgresql://user:password@host:port/dbname?sslmode=require"

# Authentication
JWT_SECRET=your_super_secret_jwt_key
JWT_EXPIRES_IN=7d

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_specific_password
SMTP_FROM="Elimcrown Academy <your_email@gmail.com>"

# SMS Configuration (MobileSasa)
MOBILESASA_API_KEY=your_api_key
MOBILESASA_SENDER_ID=ELIMCROWN

# Cloud Storage (Optional)
CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name
