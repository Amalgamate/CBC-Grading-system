{
  "name": "cbc-grading-system",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "axios": "^1.13.4",
    "html2canvas": "^1.4.1",
    "jspdf": "^2.5.2",
    "lucide-react": "^0.263.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.6.0",
    "react-router-dom": "^6.30.3",
    "react-scripts": "5.0.1",
    "recharts": "^3.6.0",
    "socket.io-client": "^4.8.3",
    "xlsx": "^0.18.5"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "CI=false react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "backend": "npm --prefix server run dev",
    "frontend": "npm start",
    "kill-ports": "powershell -ExecutionPolicy Bypass -Command \"& { $ports=@(3000,5000); foreach ($p in $ports){ try { Get-NetTCPConnection -LocalPort $p -ErrorAction SilentlyContinue | Select-Object -Expand OwningProcess | ForEach-Object { Stop-Process -Id $_ -Force -ErrorAction SilentlyContinue } } catch {} } }\"",
    "dev": "powershell -ExecutionPolicy Bypass -File .\\run-dev.ps1",
    "lint": "eslint \"src\" --ext .js,.jsx",
    "lint:fix": "eslint \"src\" --ext .js,.jsx --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,css,md,json}\"",
    "prepare": "husky install"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "prettier"
    ]
  },
  "lint-staged": {
    "src/**/*.{js,jsx}": [
      "npm run lint:fix",
      "npm run format",
      "git add"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "autoprefixer": "^10.4.14",
    "concurrently": "^9.2.1",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "postcss": "^8.4.24",
    "prettier": "^3.8.0",
    "tailwindcss": "^3.3.0",
    "wait-on": "^9.0.3"
  }
}